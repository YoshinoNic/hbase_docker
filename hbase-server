#!/bin/bash
# Start HBase
#  1) thrift API/Web UI
#  2) hbase master (which runs the local region server)

sed "s/^127.0.0.1.*$/127.0.0.1 localhost $(hostname)/" -i /etc/hosts

HBASE_SERVER=/opt/hbase-$HBASE_VERSION/bin/hbase

# Thrift server listens on port 9090 (API) and 9095 (web UI)
$HBASE_SERVER thrift start > /var/log/hbase-thrift.log 2>&1 &

exec $HBASE_SERVER master start 2>&1 | tee /var/log/hbase.log
